# Configuration de production BookYourCoach
# Copiez ce fichier vers .env sur votre serveur

# Application
APP_NAME="BookYourCoach"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://bookyourcoach.com

# nginx-proxy Configuration
VIRTUAL_HOST=bookyourcoach.com,www.bookyourcoach.com
LETSENCRYPT_HOST=bookyourcoach.com,www.bookyourcoach.com
LETSENCRYPT_EMAIL=admin@bookyourcoach.com

# Base de données MySQL hébergée sur OVH
DB_CONNECTION=mysql
DB_HOST=votre-host-mysql-ovh.ovh.net
DB_PORT=3306
DB_DATABASE=votre_nom_database
DB_USERNAME=votre_username_db
DB_PASSWORD=votre_password_db_secure

# Cache Redis
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=redis_secure_password_2024
REDIS_PORT=6379

# Mail SMTP (à configurer selon votre fournisseur)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@bookyourcoach.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@bookyourcoach.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration spécifique BookYourCoach
SANCTUM_STATEFUL_DOMAINS=bookyourcoach.com,www.bookyourcoach.com
SESSION_DOMAIN=.bookyourcoach.com

# MySQL hébergé sur OVH (pas de root password local nécessaire)

# Neo4j Configuration
NEO4J_PASSWORD=neo4j_secure_password_2024

# Docker Image Configuration
IMAGE_NAME=olegrand1976/activibe-app
DOCKER_REGISTRY=docker.io
